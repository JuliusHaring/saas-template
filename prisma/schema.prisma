generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatBot {
  id            Int             @id @default(autoincrement())
  userId        String
  GDriveSource GDriveSource?
}

model GDriveSource {
  id           Int        @id @default(autoincrement())
  chatbotId    Int        @unique
  ChatBot      ChatBot    @relation(fields: [chatbotId], references: [id])

  apiKey        String
}
