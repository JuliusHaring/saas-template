generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatBot {
  assistantId   String         @id
  userId        String
  GDriveSource  GDriveSource?
  WebsiteSource WebsiteSource?
}

model GDriveSource {
  id        String  @id @default(dbgenerated("gen_random_uuid()"))
  chatbotId String  @unique
  ChatBot   ChatBot @relation(fields: [chatbotId], references: [assistantId])

  apiKey String
}

model WebsiteSource {
  id        String  @id @default(dbgenerated("gen_random_uuid()"))
  chatbotId String  @unique
  ChatBot   ChatBot @relation(fields: [chatbotId], references: [assistantId])

  url       String
  url_exceptions  String[]
}
